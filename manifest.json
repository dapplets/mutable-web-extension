{
  "manifest_version": 3,
  "name": "Mutable Web",
  "version": "",
  "version_name": "",
  "description": "",
  "author": "",
  "short_name": "Mutable Web",
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "minimum_chrome_version": "92",
  "icons": {
    "16": "icons/icon16.png",
    "19": "icons/icon19.png",
    "32": "icons/icon32.png",
    "36": "icons/icon36.png",
    "38": "icons/icon38.png",
    "48": "icons/icon48.png",
    "64": "icons/icon64.png",
    "96": "icons/icon96.png",
    "128": "icons/icon128.png",
    "512": "icons/icon512.png"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "exclude_globs": [
        "https://mutable-near-social.netlify.app/*",
        "https://social.dapplets.org/*",
        "http://localhost/*"
      ],
      "js": [
        "custom-elements.min.js",
        "contentscript.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "callback.html"
      ],
      "matches": [
        "*://*/*"
      ]
    }
  ],
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "contextMenus",
    "clipboardRead",
    "clipboardWrite"
  ],
  "host_permissions": [
    "*://localhost/*",
    "http://*/*",
    "https://*/*"
  ]
}